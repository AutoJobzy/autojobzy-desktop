{
  "name": "autojobzy",
  "private": true,
  "version": "1.0.0",
  "description": "AutoJobzy Desktop Application",
  "author": "Your Name",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "postinstall": "node scripts/setup-puppeteer.js",
    "dev": "vite",
    "build": "vite build --config vite.config.electron.ts",
    "preview": "vite preview",
    "server": "node server/index.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"vite --config vite.config.electron.ts\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder --config electron-builder.yml",
    "electron:build:win": "npm run build && electron-builder --win --config electron-builder.yml",
    "electron:build:mac": "npm run build && electron-builder --mac --config electron-builder.yml",
    "electron:build:all": "npm run build && electron-builder --win --mac --config electron-builder.yml",
    "electron:start": "electron .",
    "setup:puppeteer": "node scripts/setup-puppeteer.js"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.966.0",
    "@aws-sdk/lib-storage": "^3.966.0",
    "@aws-sdk/s3-request-presigner": "^3.966.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "framer-motion": "^12.23.25",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.556.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "openai": "^4.24.0",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^24.32.1",
    "razorpay": "^2.9.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.6.0",
    "react-is": "^19.2.3",
    "react-router-dom": "^6.22.3",
    "recharts": "^3.6.0",
    "sequelize": "^6.35.2",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.autojobzy.app",
    "productName": "AutoJobzy",
    "extends": "electron-builder.yml"
  }
}